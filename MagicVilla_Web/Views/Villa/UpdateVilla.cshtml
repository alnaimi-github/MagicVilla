@model MagicVilla_Web.Dto.Villa.VillaUpdateDto
<form method="post" asp-action="UpdateVilla" enctype="multipart/form-data">
    <br />
    <input asp-for="Id" hidden/>
    <div class="container border p-3">
        <h1 class="text-white text-center">Create Villa</h1>
        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Rate</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Rate" class="form-control" />
                        <span class="text-danger" asp-validation-for="Rate"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Details</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                        <span class="text-danger" asp-validation-for="Details"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="ImageUrl" hidden class="form-control" />
                        <input asp-for="ImageLocalPath" hidden class="form-control" />
                        <input asp-for="Image"  class="form-control" />
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Occupancy</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Occupancy" class="form-control" />
                        <span class="text-danger" asp-validation-for="Occupancy"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Sqft</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Sqft" class="form-control" />
                        <span class="text-danger" asp-validation-for="Sqft"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Amenity</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="Amenity" class="form-control" rows="5"></textarea>
                        <span class="text-danger" asp-validation-for="Amenity"></span>
                    </div>
                    <div class="col-5 offset-2">

                        <a asp-action="VillaIndex" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Update" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" class="w-100" asp-append-version="true" alt=""/>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


