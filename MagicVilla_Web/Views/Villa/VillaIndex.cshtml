@model List<MagicVilla_Web.Dto.Villa.VillaDto>


<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h2 class="text-primary">Villa List</h2>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa</a>
        </div>
    </div>
   
    <table class="table">
        <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
                Occupancy
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Occupancy
                <td>
                    @((item.Rate).ToString("C"))
                </td>
                <td>
                    <a class="btn btn-success" asp-action="UpdateVilla" asp-route-VillaId="@item.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                        <a asp-action="DeleteVilla" asp-route-VillaId="@item.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>