@model MagicVilla_Web.VM.VillaNumberDeleteVM
<form method="post" asp-action="DeleteVillaNumber">
    <br />
    <input asp-for="VillaNumber.VillaNo" hidden/>
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Villa</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" class="form-control" disabled/>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaId" class="form-select" asp-items="@Model.villaList" disabled>
                    <option disabled selected>--Select Villa--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rows="5" disabled></textarea>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="VillaNumberIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

