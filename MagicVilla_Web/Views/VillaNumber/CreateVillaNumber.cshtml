@model MagicVilla_Web.VM.VillaNumberCreateVM
<form method="post" asp-action="CreateVillaNumber">
    <br />
    <div class="container border p-3">
<div asp-validation-summary="All" class="text-danger"></div>
        <h1 class="text-white text-center">Create Villa</h1>
        <hr/>
        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" class="form-control"/>
                <span class="text-danger" asp-validation-for="VillaNumber.VillaNo"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.VillaId" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaId" class="form-select" asp-items="@Model.villaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
                <span class="text-danger" asp-validation-for="VillaNumber.VillaId"></span>
            </div>
            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span class="text-danger" asp-validation-for="VillaNumber.SpecialDetails"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="VillaNumberIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control"/>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}