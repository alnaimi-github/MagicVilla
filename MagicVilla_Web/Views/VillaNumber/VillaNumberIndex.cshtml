@model List<MagicVilla_Web.Dto.VillaNumber.VillaNumberDto>


<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <h2 class="text-primary">Villa Number List</h2>
    </div>
    <div class="col text-end pt-1">
        <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa Number</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>
              Villa Name
            </th>
            <th>
               Villa Number
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Villa!.Name
                </td>
                <td>
                @item.VillaNo
                <td>
                        <a class="btn btn-success" asp-action="UpdateVillaNumber" asp-route-VillaNo="@item.VillaNo">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                        <a asp-action="DeleteVillaNumber" asp-route-VillaNo="@item.VillaNo" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>